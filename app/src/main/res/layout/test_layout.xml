<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">


    <View
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/default_rainbow_22"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/avatar"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:id="@+id/date_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <View
                android:id="@+id/icon1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:background="@color/default_rainbow_63"/>
            <View
                android:id="@+id/icon2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:background="@color/default_rainbow_82"/>
            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="01/07/2018"
                android:textSize="12sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/titles_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/date_box">

            <View
                android:id="@+id/icon3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/default_rainbow_53"/>

            <TextView
                android:id="@+id/new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/title"
                android:layout_toEndOf="@id/icon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="eric"
                android:textSize="16sp"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>